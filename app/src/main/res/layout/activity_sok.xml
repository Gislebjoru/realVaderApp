<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B63AD"
    tools:context="com.example.bjoru.realvaderapp.sokActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sokeKnapp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tilbakeKnapp1">

        <LinearLayout
            android:id="@+id/linearSok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tilbakeKnapp1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sokeKnapp"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/sokeKnapp"
        android:layout_width="wrap_content"
        android:background="#8FC2ED"
        android:layout_height="wrap_content"
        android:text="Søk"
        android:textColor="#010B14"
        android:layout_below="@+id/sokeFelt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/sokeFelt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010B14"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/tilbakeKnapp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Værvarsel for min lokasjon"
        android:background="#8FC2ED"
        android:textColor="#010B14"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</android.widget.RelativeLayout>
